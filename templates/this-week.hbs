<section id="this-week">
    <h1>This week</h1>

    <div class="week-summary">
        {{#with lecture}}
            <section>
                <h1><a href="#{{lectureSlug this}}">Topics</a></h1>
                <ul>
                    {{#each Events}}
                        {{#each Topics}}
                            <li>{{@key}}</li>
                        {{/each}}
                    {{/each}}
                </ul>
            </section>
            <section>
                <h1><a href="#{{lectureSlug this}}">References</a></h1>

                {{#each Events}}{{> _references }}{{/each}}
            </section>
        {{/with}}
        {{#with lecture}}
            <section class="slides-and-notes">
                <h1><a href="#{{lectureSlug this}}">Slides and Notes</a></h1>
                <ul>{{#each Events}}{{#each [Slides and Notes]}}<li>{{maybeLink this}}</li>{{/each}}{{/each}}</ul>
            </section>
        {{/with}}
        {{#with assignment }}
            <section class="assignment">
                <h1><a href="#{{assignmentSlug this}}">{{Label}}</a></h1>
                <p>{{{Description}}}</p>

                {{> _assignment-details }}
            </section>
        {{/with}}
    </div>
</section>
